<Window x:Class="LegendsGenerator.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LegendsGenerator.Editor"
        xmlns:code="clr-namespace:LegendsGenerator.Editor.CodeEditor"
        xmlns:nodes="clr-namespace:LegendsGenerator.Editor.ContractParsing"
        mc:Ignorable="d"
        Title="LegendsGenerator Editor"
        WindowState="Maximized">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="Open_Click" />
                <MenuItem Header="_Save" Click="Save_Click" />
                <Separator />
                <MenuItem Header="_Undo" Click="Open_Click" />
                <MenuItem Header="_Redo" Click="Save_Click" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <DataGridCell Grid.Column="0"
                          Grid.RowSpan="3">
                <local:DefinitionList 
                    x:Name="DefList"
                    />
            </DataGridCell>
            <GridSplitter 
              Grid.Column="1"
              Grid.RowSpan="3"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Background="Black" 
              ShowsPreview="True"
              Width="5"
              />
            <DataGridCell Grid.Column="2" Grid.ColumnSpan="3">
                <local:DefinitionEditor 
                    x:Name="EditView"
                    />
            </DataGridCell>
            <GridSplitter Grid.Row="1"
                      Grid.Column="2"
                      Grid.ColumnSpan="3"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Center"
              Background="Black" 
              ShowsPreview="True"
              Height="5"
           />
            <DataGridCell Grid.Column="2" Grid.Row="3">
                <TabControl TabStripPlacement="Bottom">
                    <TabItem Header="Code Editor">
                        <code:SyntaxHighlightBox Text="{Binding SelectedNode.Content}" />
                    </TabItem>
                    <TabItem Header="Warnings" />
                    <TabItem Header="History">
                        <ListBox ItemsSource="{Binding SelectedDefinition.History.Items}" >
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text=": " />
                                        <TextBlock Text="{Binding PreviousString}" Visibility="{Binding NotUndone, Converter={StaticResource VisibleIfTrueConverter}}" />
                                        <TextBlock Text="{Binding PreviousString}" Visibility="{Binding Undone, Converter={StaticResource VisibleIfTrueConverter}}" Foreground="DarkGray" />
                                        <TextBlock Text=" => " />
                                        <TextBlock Text="{Binding NextString}" Visibility="{Binding Undone, Converter={StaticResource VisibleIfTrueConverter}}" />
                                        <TextBlock Text="{Binding NextString}" Visibility="{Binding NotUndone, Converter={StaticResource VisibleIfTrueConverter}}" Foreground="DarkGray" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                </TabControl>
            </DataGridCell>
            <GridSplitter 
              Grid.Column="3"
              Grid.Row="3"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Background="Black" 
              ShowsPreview="True"
              Width="5"
              />
            <DataGridCell Grid.Column="5" Grid.Row="3">
                <StackPanel>
                    <ListView ItemsSource="{Binding SelectedNode.Options}" >
                        <ListView.ItemTemplate>
                            <HierarchicalDataTemplate DataType="{x:Type nodes:BoolPropertyNode}">
                                <Label>
                                    <StackPanel Orientation="Horizontal" ToolTip="{Binding Description}">
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text=": " />
                                        <CheckBox IsChecked="{Binding Content}" IsEnabled="{Binding ContentsModifiable}" />
                                    </StackPanel>
                                </Label>
                            </HierarchicalDataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Return Type: " />
                        <TextBlock Text="{Binding SelectedNode.ReturnType}" />
                    </StackPanel>
                    <TextBlock Text="Parameters: " />
                    <ListView ItemsSource="{Binding SelectedNode.Parameters}" />
                </StackPanel>
            </DataGridCell>

        </Grid>
    </DockPanel>
</Window>

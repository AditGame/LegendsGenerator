[*.cs]

# CA1304: Specify CultureInfo
dotnet_diagnostic.CA1304.severity = none

# Default severity for analyzer diagnostics with category 'Globalization'
dotnet_analyzer_diagnostic.category-Globalization.severity = none

# CA1062: Validate arguments of public methods
dotnet_diagnostic.CA1062.severity = none

# CA2227: Collection properties should be read only
dotnet_diagnostic.CA2227.severity = none

# CS1591: Missing XML comment for publicly visible type or member
dotnet_diagnostic.CS1591.severity = none

# CA1814: Prefer jagged arrays over multidimensional
dotnet_diagnostic.CA1814.severity = none

# CA1819: Properties should not return arrays
dotnet_diagnostic.CA1819.severity = none

# CA5394: Do not use insecure randomness
dotnet_diagnostic.CA5394.severity = none

# CA1014: Mark assemblies with CLSCompliant
# We'll enable this once they make doing the right thing easy: https://github.com/dotnet/msbuild/issues/2281
dotnet_diagnostic.CA1014.severity = none
insert_final_newline=true
csharp_style_expression_bodied_methods=false:silent
csharp_style_expression_bodied_constructors=false:silent
csharp_style_expression_bodied_operators=false:silent
csharp_style_var_when_type_is_apparent=true:silent
dotnet_diagnostic.CA1200.severity=warning
dotnet_diagnostic.CA1507.severity=warning
dotnet_diagnostic.CA1805.severity=suggestion
dotnet_diagnostic.CA3077.severity=warning
dotnet_diagnostic.CA3076.severity=warning
csharp_using_directive_placement=inside_namespace:warning
csharp_style_implicit_object_creation_when_type_is_apparent = false


[*.{cs,vb}]
dotnet_style_qualification_for_field=true:silent
dotnet_style_qualification_for_property=true:silent
dotnet_style_qualification_for_method=true:silent
dotnet_style_qualification_for_event=true:silent
dotnet_diagnostic.CA1051.severity=warning
dotnet_diagnostic.CA1708.severity=warning
dotnet_diagnostic.CA1712.severity=warning
dotnet_diagnostic.CA1725.severity=warning
dotnet_diagnostic.CA1838.severity=warning
dotnet_diagnostic.CA3075.severity=warning
dotnet_diagnostic.CA3061.severity=warning
dotnet_diagnostic.CA3147.severity=silent
dotnet_diagnostic.CA5360.severity=warning
dotnet_diagnostic.CA2201.severity=warning
dotnet_diagnostic.CA2215.severity=warning
dotnet_diagnostic.CA2229.severity=warning